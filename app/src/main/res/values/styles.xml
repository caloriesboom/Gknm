<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryStyles</item>
    </style>

    <!--登录-->
    <style name="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120px</item>
    </style>

    <!--查看大图页面，全屏显示-->
    <style name="ViewBigPicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--监督检查——表头-->
    <style name="HeaderText">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/attention_title_item</item>
    </style>
    <!--监督检查——item-->
    <style name="ItemText">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--监督检查——企业信息-->
    <style name="TextPollInfo">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditTextPollInfo">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/dark_primary_color_angle22</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditTextGas">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/dark_primary_color_angle22</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="RelationLayoutPollInfo">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/btn_primary_color_selector22</item>
    </style>

    <!--监督检查——现场检查结果记录-->
    <style name="Textlocalcheck">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Textlocalcheck_unit">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditTextlocalcheck">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_weight">1.1</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/dark_primary_color_angle22</item>
        <item name="android:drawableRight">@mipmap/delete_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="Textlocalcheck_net">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">1.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Textlocalcheckbox">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="checkboxlocal">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="Textlocalcheck_base_info">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--tab标签的样式-->
    <style name="MyWidget" parent="@android:style/Theme" />

    <style name="MyWidget.TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_unselected</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>


    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <item name="imageId" type="id"/>



    <style name="BaseBtnStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/dimen_20dp</item>
    </style>

    <style name="EditTextTime">
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
        <item name="android:background">@drawable/dark_primary_color_angle22</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
